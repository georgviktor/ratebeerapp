<div id="<%= dom_id brewery %>">
  <h2>
    <%= link_to brewery.name, brewery %>
  </h2>

  <p>
    Olueiden määrä: <%= @brewery.beers.count%>
  </p>

  <p> <%=link_to 'list of beers', beers_path %> </p>
  <p>
  <% brewery.beers.each do |beer| %>
    <%= link_to beer.name , beer %>
  <% end %>
  </p>
  <p>
    <em>Established in <%= brewery.year %></em>
  </p>

  <p>
    <% if brewery.ratings.empty? %>
      <p> Brewery has not yet been rated!  </p>
    <% else %>
      <%= "Beer has #{pluralize(brewery.ratings.count, 'rating')} with average of #{brewery.average_rating}." %>
    <% end %> 
  </p>

</div>
